<configuration>

    <!-- DÃ©finir diffÃ©rents formats -->
    <property name="PATTERN_DEBUG" value="ðŸŒ± DEBUG: %msg%n"/>
    <property name="PATTERN_INFO" value="â„¹ï¸ INFO: %logger{36} - %msg%n"/>
    <property name="PATTERN_WARN" value="âš ï¸ WARN: %d{yyyy-MM-dd HH:mm:ss} [%thread] %logger{36} - %msg%n"/>
    <property name="PATTERN_ERROR" value="âŒ ERROR: %d{yyyy-MM-dd HH:mm:ss} [%thread] %logger{36} - %msg%n"/>

    <!-- DEBUG -->
    <appender name="DEBUG_APPENDER" class="ch.qos.logback.core.ConsoleAppender">
        <filter class="ch.qos.logback.classic.filter.LevelFilter">
            <level>DEBUG</level>
            <onMatch>ACCEPT</onMatch>
            <onMismatch>DENY</onMismatch>
        </filter>
        <encoder>
            <pattern>${PATTERN_DEBUG}</pattern>
        </encoder>
    </appender>

    <!-- INFO -->
    <appender name="INFO_APPENDER" class="ch.qos.logback.core.ConsoleAppender">
        <filter class="ch.qos.logback.classic.filter.LevelFilter">
            <level>INFO</level>
            <onMatch>ACCEPT</onMatch>
            <onMismatch>DENY</onMismatch>
        </filter>
        <encoder>
            <pattern>${PATTERN_INFO}</pattern>
        </encoder>
    </appender>

    <!-- WARN -->
    <appender name="WARN_APPENDER" class="ch.qos.logback.core.ConsoleAppender">
        <filter class="ch.qos.logback.classic.filter.LevelFilter">
            <level>WARN</level>
            <onMatch>ACCEPT</onMatch>
            <onMismatch>DENY</onMismatch>
        </filter>
        <encoder>
            <pattern>${PATTERN_WARN}</pattern>
        </encoder>
    </appender>

    <!-- ERROR -->
    <appender name="ERROR_APPENDER" class="ch.qos.logback.core.ConsoleAppender">
        <filter class="ch.qos.logback.classic.filter.LevelFilter">
            <level>ERROR</level>
            <onMatch>ACCEPT</onMatch>
            <onMismatch>DENY</onMismatch>
        </filter>
        <encoder>
            <pattern>${PATTERN_ERROR}</pattern>
        </encoder>
    </appender>

    <!-- Profil dev avec appender multiple -->
    <springProfile name="dev">
        <root level="DEBUG">
            <appender-ref ref="DEBUG_APPENDER"/>
            <appender-ref ref="INFO_APPENDER"/>
            <appender-ref ref="WARN_APPENDER"/>
            <appender-ref ref="ERROR_APPENDER"/>
        </root>
    </springProfile>

    <!-- Profil prod avec appender multiple -->
    <springProfile name="prod">
        <root level="DEBUG">
            <appender-ref ref="WARN_APPENDER"/>
            <appender-ref ref="ERROR_APPENDER"/>
        </root>
    </springProfile>

</configuration>
